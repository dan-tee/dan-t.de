<header class="container" id="main-header">
    <nav class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-center <%= yield(:width) %>">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#main-navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to 'Daniel Thomas', root_path, class: 'navbar-brand' %>
            </div>
            <div class="collapse navbar-collapse" id="main-navbar">
                <ul class="nav navbar-nav">
                    <!-- insert code to add class="active" to current page -->
                    <li class = <%= raw(tab_active(cv_path, yield(:current_path))) %>> <%= link_to 'CV', cv_path %> </li>
                    <li class = <%= raw(tab_active(contact_path, yield(:current_path))) %>> <%= link_to 'Contact', contact_path %> </li>
                    <li class = <%= raw(tab_active(discuss_path, yield(:current_path))) %>> <%= link_to 'Discuss', discuss_path %> </li>
                    <% if @is_admin %>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><%= link_to 'Private Messages', private_messages_path %></li>
                                <li><%= link_to 'Page Views', statistics_page_views_path %></li>
                                <li class="divider"></li>
                                <li><%= link_to 'Logout', logout_path, :method => :delete %></li>
                            </ul>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>
</header>
