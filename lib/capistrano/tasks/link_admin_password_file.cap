desc 'Create link to shared .admin_password'
task :link_admin_password_file do
  on roles(:app) do
    shared_password_file = "#{shared_path}/config/.admin_password"

    if test("[ -f #{shared_password_file} ]", nil)
      execute "ln -nfs #{shared_password_file} #{release_path}/config/.admin_password"
    else
      raise "Shared config file #{shared_password_file} does not exist"
    end
  end
end